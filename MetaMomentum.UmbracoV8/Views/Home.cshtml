@inherits Umbraco.Web.Mvc.UmbracoViewPage<ContentModels.Home>
@using ContentModels = Umbraco.Web.PublishedModels;
@using MetaMomentum.Models;
@{

	Layout = null;

	var metaMomentum = Model.Value<MetaValues>
		("metaMomentum");
		}

		<html>
		<head>
			@Html.Partial("MetaMomentum/RenderMetaTags", metaMomentum)
		</head>
		<body>


			Title:					@(metaMomentum.Title)<br />
			Share Title:			@(metaMomentum.ShareTitle)<br />
			Share Description:		@(metaMomentum.ShareDescription)<br />
			Description:			@(metaMomentum.Description)<br />
			Share Image:			@(metaMomentum.ShareImageUrl)<br />
			Open Graph Site Name:	@(metaMomentum.OGSiteName)<br />
			TwitterName:			@(metaMomentum.TwitterName)<br />

			<img src="@(metaMomentum.ShareImageUrl)?width=1200&height=630&bgcolor=white" />
		</body>
	</html>
